= render "newlink"
.indexbox
  .formone
    .formone__title
      %h スイーツ投稿
    .formone__box
      .formone__box__search
        = form_with(url: search_sweets_path, local: true, method: :get) do |g|
          = g.text_field :keyword, placeholder: "スイーツ検索", type: "search"
          = g.submit "検索", class: "formone__box__search__btn"

  - @sweets.each do |f|
    .indexbox__sweet
      .indexbox__sweet__list
        = link_to sweet_path(f.id) do
          .indexbox__sweet__list__image
            = image_tag f.image.url, alt: "写真", hight: "200px", width: "200px"
          .indexbox__sweet__list__name
            = f.name